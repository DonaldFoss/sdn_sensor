export CC="clang"
export CXX="clang++"

# options for GNU autotools builds
export CFLAGS="-g"
export CCFLAGS="-g"
export CPPFLAGS="-g"
export CXXFLAGS="-g"

current_directory="$(dirname $(readlink -f ${BASH_SOURCE[0]}))"
build_directory="${current_directory}"

export LOG4C_RCPATH="${script_directory}/conf/log4crc"
